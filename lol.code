veld = (-3..10) × (-10..10)

l = looptijd / 100

a = l + w₀·l/4 + w₁·l/2
M = ((10,0),(0,10))
N = ((10·cos a, looptijd/5·sin a, 90), (-12·sin a, 12·cos a, 50), (0, 0, 10))

k = rgb(1/w₀, 1/w₁, 0.0 - 1/w₁)
g = w → inkleur( cirkel(N mat3.mul w, 0.5·abs (w₀) + abs(w₁)), k)
mat2.mul = m,v → (m₀₀·v₀+m₀₁·v₁, m₁₀·v₀+m₁₁·v₁)
mat3.mul = m,v → (m₀₀·v₀+m₀₁·v₁+m₀₂, m₁₀·v₀+m₁₁·v₁+m₁₂, m₂₀·v₀+m₂₁·v₁+m₂₂) 

uit = teken (veld map g)
