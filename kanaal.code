; encodeer
kenc = w → d
	d = cat(w map (b → [#b] || b))

; decodeer (recursief)
kdecA =  data → Berichten
	len = 1 + data₀
	#data > 0  ⇒  Berichten = [ bericht ] || kdecB (data vanaf len)
		bericht = data deel [1, len]

kdec = ((kdecB → kdecA)^999) (x → [])

uit =  check cat ","
	check =  (kenc ∘ kdec) berichten
		berichten =  ["hoi", "hoe", "is", "het", "dan"]


