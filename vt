#!/usr/bin/lua
package.path = package.path .. ";../?.lua"
require 'vertaal'
require 'util'
require 'lisp'
require 'func'

require 'doe'

require 'love'
require 'js'

-- GLOBALEN
--print_ingewanden = true
print_typen_bron = true
print_typen_stroom = true
print_syntax = false
print_losse_waarden = false
print_suikervrij = false
print_deducties = false

-- argumenten
local taal = 'nl'
local bron = {}
local arch = 'amd64'
local immediate
local love
local js
local tostdout = false

-- stroom, love, js
local doel = 'stroom'
local uitvoer = 'main.lisp'

local args = {...}

for i=1,#args do
	local arg = args[i]
	local vlag
	if arg == '-' then
		tostdout = true
	elseif arg:sub(1,1) == '-' then
		vlag = arg:sub(2,2)
		if vlag == 'o' then
			doel = args[i+1] or doel
			i = i + 1
		elseif vlag == 't' then
			arch = string.lower(arg:sub(3))
		elseif vlag == 'J' then
			doel = 'js'
			uitvoer = 'main.js'
		elseif vlag == 'L' then
			doel = 'love'
			uitvoer = 'main.lua'
		elseif vlag == 'i' then
			immediate = true
		elseif vlag == 's' then
			print_ingewanden = true
		elseif vlag == 'v' then
			print_losse_waarden = true
		elseif vlag == 'l' then
			taal = string.lower(arg:sub(3,5))
			if taal == '' then taal = args[i+1] end
			if not taal then taal = 'nl' end

			if taal ~= 'nl' and taal ~= 'NL' then
				print('onherkende taal '..taal)
				return
			end
		end
	else
		-- code
		bron[#bron+1] = arg
	end
end

if #bron == 0 then
	print('geen invoer')
	print(
[[gebruik: vt [OPTIES...] [BESTANDEN...]
Vertaalt broncode naar applicaties.
Opties:
		-		print naar stdout
		-i	voer meteen uit
		-s	print syntax
		-l	stel lokale van broncode in (standaard NL)
		-o	uitvoerbestand
		-L	compileer naar love2d
		-J	compileer naar javascript
		-v	verboos zijn
]])
	return
end

-- lees in
code = file(bron[1])
local stroom,typen = vertaal(code)

local uit
if doel == 'love' then
	uit = tolove(stroom,typen)
elseif doel == 'js' then
	uit = toJs(stroom,typen)
else
	uit = unlisp(stroom)
end

if immediate then
	if doel == 'love' then
		file('main.lua', uit)
		os.execute('love .')
	elseif doel == 'js' then
		print('kan niet direct javascript uitvoeren')
	else
		uit = unlisp(doe(lisp(uit)))
	end
end

-- uitvoer
if tostdout then
	print(uit)
else
	file(uitvoer, uit)
end
