C = verplaats(muis.x/100,looptijd,0)


mat = C
n = 5
vecs = (0..n × 0..n) map (I,J → [I,0,J,1])

hw = scherm.breedte/2
zknijp = [x,y,z,w] → [(x-0.8)/(z/2) + 0.8, (y-0.5)/(z/2) + 0.5, .3/z, 1] · 100

data = vecs map (vec → zknijp(mat · vec))
uit = teken ((data map cirkel) zip (data map kleur) map verf)

kleur = [kx,ky,kz,kw] → rgb(kx/scherm.breedte,ky/100,kz/100)
